@model ATDMVC.Models.Request

<br />
<h2 class="text-info">@(Model.RequestID!=0 ? "Edit" : "Create") Request</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.RequestID != 0)
        {
            <input type="hidden" asp-for="RequestID" />

        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="RequestType"></label>
            </div>
            <div class="col-6">
                <input asp-for="RequestType" class="form-control" />
                <span asp-validation-for="RequestType" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-3">
                <label asp-for="LocationID"></label>
            </div>
            <div class="col-6">
                <input asp-for="LocationID" class="form-control" />
                <span asp-validation-for="LocationID" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-3">
                <label asp-for="FirstName"></label>
            </div>
            <div class="col-6">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="LastName"></label>
            </div>
            <div class="col-6">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Email"></label>
            </div>
            <div class="col-6">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>



        <div class="form-group row">
            <div class="col-3">
                <label asp-for="NumberRacksMarked"></label>
            </div>
            <div class="col-6">
                <input asp-for="NumberRacksMarked" class="form-control" />
                <span asp-validation-for="NumberRacksMarked" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.RequestID != 0 ? "Update" : "Create")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>


    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
